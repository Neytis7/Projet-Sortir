{% extends 'base.html.twig' %}

{% set routeAjoutLieu = constant('App\\Controller\\LieuController::ROUTE_LIEU_ADD') %}

{% block title %}Ajouter ville{% endblock %}

{% block body %}
    <h1 class="display-1 text-center">Ajouter une nouvelle ville</h1>
    {{ form_start(villeForm) }}


    <div class="form-group">
        {{ form_label(villeForm.nom) }}
        {{ form_widget(villeForm.nom) }}
        <div class="form-error">
            {{ form_errors(villeForm.nom) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(villeForm.codePostal) }}
        {{ form_widget(villeForm.codePostal) }}
        <div class="form-error">
            {{ form_errors(villeForm.codePostal) }}
        </div>
    </div>

    <div class="form-group d-flex justify-content-between mt-3">
        <input type="submit" class="btn btn-success" value="Enregistrer"/>
        <a href="{{ path(routeAjoutLieu)}}" class="btn btn-secondary">Retour</a>
    </div>


    {{ form_end(villeForm) }}
{% endblock %}