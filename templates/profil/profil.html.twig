{% extends 'base.html.twig' %}

{% block title %} Profil{% endblock %}

{% block body %}

<div class="container">

   <h1 class="display-1 text-center">Mon Profil</h1>

   <div class="align-items-center">
       {{ form_start(form) }}
         <div class="form-group">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo) }}
               <div class="form-error">
                  {{ form_errors(form.pseudo) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.nom) }}
               {{ form_widget(form.nom) }}
               <div class="form-error">
                     {{ form_errors(form.nom) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.prenom) }}
               {{ form_widget(form.prenom) }}
               <div class="form-error">
                     {{ form_errors(form.prenom) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.telephone) }}
               {{ form_widget(form.telephone) }}
               <div class="form-error">
                     {{ form_errors(form.telephone) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.mail) }}
               {{ form_widget(form.mail) }}
               <div class="form-error">
                     {{ form_errors(form.mail) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_widget(form.motDePasse) }}
               <div class="form-error">
                     {{ form_errors(form.motDePasse) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.sitesNoSite) }}
               {{ form_widget(form.sitesNoSite) }}
               <div class="form-error">
                     {{ form_errors(form.sitesNoSite) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.photo) }}
               {{ form_widget(form.photo) }}
               <div class="form-error">
                     {{ form_errors(form.photo) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.administrateur) }}
               {{ form_widget(form.administrateur) }}
               <div class="form-error">
                     {{ form_errors(form.administrateur) }}
               </div>
         </div>
         <div class="form-group">
               {{ form_label(form.actif) }}
               {{ form_widget(form.actif) }}
               <div class="form-error">
                     {{ form_errors(form.actif) }}
               </div>
         </div>
         <div class="d-flex justify-content-between mt-2">
            {{ form_row(form.submit) }}
            <input type="button" class="btn btn-primary" value="Annuler" onclick="history.back()">
         </div>

       {{ form_end(form) }}
   </div>
</div>
{% endblock %}
