{% extends 'base.html.twig' %}

{% block title %}{{leParticipant.pseudo}}{% endblock %}

{% block body %}
{% set routeSortie = constant('App\\Controller\\SortieController::ROUTE_SORTIE') %}
<div class="container">

   <h1 class="display-1 text-center">{{leParticipant.pseudo}}</h1>

   <div class="align-items-center">

         <div class="form-group">

             <div class="form-group">
                 {{ form_label(form.nom) }}
                 {{ form_widget(form.nom) }}
                 <div class="form-error">
                     {{ form_errors(form.nom) }}
                 </div>
             </div>
             <div class="form-group">
                 {{ form_label(form.prenom) }}
                 {{ form_widget(form.prenom) }}
                 <div class="form-error">
                     {{ form_errors(form.prenom) }}
                 </div>
             </div>
             <div class="form-group">
                 {{ form_label(form.telephone) }}
                 {{ form_widget(form.telephone) }}
                 <div class="form-error">
                     {{ form_errors(form.telephone) }}
                 </div>
             </div>
             <div class="form-group">
                 {{ form_label(form.mail) }}
                 {{ form_widget(form.mail) }}
                 <div class="form-error">
                     {{ form_errors(form.mail) }}
                 </div>
             </div>

             <div class="form-group">
                 {{ form_label(form.site) }}
                 {{ form_widget(form.site) }}
                 <div class="form-error">
                     {{ form_errors(form.site) }}
                 </div>
             </div>
        
         <div class="d-flex justify-content-between mt-2">
             <input type="button" class="btn btn-primary" value="Annuler" onclick="history.back()">
         </div>

   </div>
</div>
{% endblock %}